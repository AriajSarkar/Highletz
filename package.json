{
  "name": "github-file-highlighter",
  "version": "1.0.0",
  "type": "module",
  "description": "Highlights files in GitHub repos based on when they were last changed",
  "author": "Ariaj Sarkar",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --watch",
    "build": "cross-env NODE_ENV=production webpack",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "package": "npm run build && zip -r dist/github-file-highlighter-v$npm_package_version.zip dist",
    "generate-icons": "node src/utils/generate-icons.js"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "autoprefixer": "^10.4.16",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.54.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  }
}
